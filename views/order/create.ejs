<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12 col-lg-12">

      <br />
      <h2>Create a new order </h2>
      <br />
     <% maxID=0; for (var i=0; i < orders.query.length; i++) {
        if(orders.query[i]._orderid > maxID) { maxID=orders.query[i]._orderid;   }
        }%>
      <div class="content">
        <div>
          <form name="order" method="POST" action="/order/save">

            <div class="form-group" id=frm>
              <label for=" _orderid">OrderID</label>
              <input type="number" class="form-control" id="_orderid" name="_orderid" value="<%= maxID+1 %>" required readonly>
            </div>

            <%include partial_edit.ejs%>

            <div class="form-group">
              <input type="submit" value="Save" class="btn btn-primary" />
            </div>
          </form>

          <br />

          <form method="get" action="/order">
            <input type="submit" value="Return to list" class="btn btn-caution" />
          </form>

        </div>
      </div>
    </div>
  </div>
</div>